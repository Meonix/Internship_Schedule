<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical">
    <TextView
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_width="wrap_content"
        android:id="@+id/itemUserAdmin_tvNameOfUser"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_width="wrap_content"
        android:id="@+id/itemUserAdmin_tvPhone"
        android:textAllCaps="false"
        android:textSize="13sp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_width="wrap_content"
        android:id="@+id/itemUserAdmin_tvPosition"
        android:textSize="13sp"
        android:textAllCaps="false"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_marginTop="12dp"
        android:background="@drawable/button_border_bottom_layout"
        android:layout_marginStart="12dp"
        android:backgroundTint="@color/red"
        android:layout_width="wrap_content"
        android:text="Delete User"
        android:textAllCaps="false"
        android:id="@+id/itemUserAdmin_btDeleteUser"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginTop="5dp"
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_line" />
</LinearLayout>